generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Vendor {
  id            String     @id @default(cuid())
  name          String
  email         String     @unique
  contactPerson String?
  notes         String?
  createdAt     DateTime   @default(now())

  // ðŸ‘‡ back relation: one vendor -> many proposals
  proposals     Proposal[]
}

model Rfp {
  id                     String     @id @default(cuid())
  title                  String
  naturalLanguageInput   String
  structuredSpec         Json
  budget                 Float?
  currency               String?
  deliveryDeadline       DateTime?
  paymentTerms           String?
  minimumWarrantyMonths  Int?
  createdAt              DateTime   @default(now())

  // ðŸ‘‡ back relation: one RFP -> many proposals
  proposals              Proposal[]
}

model Proposal {
  id              String   @id @default(cuid())
  rfpId           String
  vendorId        String
  totalPrice      Float?
  currency        String?
  deliveryDays    Int?
  warrantyMonths  Int?
  terms           String?
  notes           String?
  createdAt       DateTime @default(now())

  // NEW
  source          String   @default("MANUAL")
  emailId         String?  @unique
  email           EmailMessage? @relation(fields: [emailId], references: [id])

  // relations you already have:
  rfp             Rfp      @relation(fields: [rfpId], references: [id])
  vendor          Vendor   @relation(fields: [vendorId], references: [id])
}


model EmailMessage {
  id         String      @id @default(cuid())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  from       String
  to         String?
  subject    String?
  bodyText   String?
  bodyHtml   String?
  messageId  String?     @unique
  receivedAt DateTime?
  status     EmailStatus @default(PENDING)

  // One email -> optional one proposal
  proposal   Proposal?
}

enum EmailStatus {
  PENDING
  PARSED
  FAILED
}
